<h2>Edita tu perfil</h2>

<form action="/miperfil/{{user._id}}/edit" method="POST" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="{{user.username}}">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br>
 

  <br><br>

  <label for="email">Introduce tu email</label>
  <input id="email" type="text" name="email" placeholder="email@email.com">

  <br><br>

  <label for="phone">Introduce tu teléfono</label>
  <input id="phone" type="phone" name="phone" placeholder="{{user.phone}}">
  
  <br><br>

  <label for="photo">Sube to imagen de perfil</label>
  <button type="submit">Subir</button>
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Actualizar información de perfil</button>

  <p>{{user}}</p>

  
</form>