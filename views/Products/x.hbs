
<div class="row">
  <div class="card shadow-lg mr-5" style="width: 40rem;">
    <div class="card-img-top" src="{{imgPath}}" alt="Card image cap" height="200px"
      style="background-image: url({{imgPath}}); object-fit: cover; width: 100%; height: 400px; 
  background-size: 700px;"></div>
    <div class="card-body">
      <h3 class="card-title font-weight-bold">{{name}}</h3>
      <h5 class=" font-weight-bold">Kcals: {{kcal}}</h5>
      <h5 class=" text-info">Properties: {{#if vegan }} <i class="fas fa-carrot"></i> vegan {{/if}}{{#is veget true}} <i class="fas fa-apple-alt"></i> vegetarian {{/is}}</h5>
      <h6 class="card-title  "><a class="text-info"
          href="/auth/miperfil/{{author.id}}">Creado por: {{author.username}}</a></h6>
      <h6><em>Mandar whatsapp al Creador</em> <a href="https://api.whatsapp.com/send?phone={{author.phone}}"><i
            class="fab fa-whatsapp"></i></a></h6>
      <p class="card-text">{{description}}</p>
      <div class="card-text">
        <p class=" font-italic mb-4">Estos son mis ingredientes:</p>
        <ul class="list-group list-group-flush">
          {{#each ingredients}}
          <li class="list-group-item">
            {{this}}</li>

          {{/each}}</ul>
      </div>
      {{#is author.username this.user.username}}
      <a href="/products/{{id}}/edit" class="btn btn-primary">Edit post</a>{{/is}}
    </div>
  </div>
