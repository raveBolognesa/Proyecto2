<div class="container">

  <div class="column" id="filters">
    <img src="/images/logo.png" alt="" height="170px" width="140px" >
    <p class="p-3 m-3 btn-danger rounded shadow"><a href="/products/new" style="color:white">Nuevo Producto</a></p>
    <p class="p-3 m-3 btn-danger rounded shadow"><input type="checkbox" name="filtro1" id="filtro1"> Filtro vegano</p>
    <p class="p-3 m-3 btn-danger rounded shadow"><input type="checkbox" name="filtro2" id="filtro2"> Filtro vegetariano</p>
    <p class="p-3 m-3 btn-danger rounded shadow">Tipo de comida <select name="typeFood" id="typeFood" class="browser-default custom-select mt-2">
        <option value="Americana">🍔 Americana</option>
        <option value="China">🇨🇳 China</option>
        <option value="Española">💃🏻  Española</option>
        <option value="India">🇮🇳  India</option>
        <option value="Italiana">🍝 Italiana</option>
        <option value="Japonesa">🇯🇵  Japonesa</option>
        <option value="Turca">🇹🇷  Turca</option>
        <option value="Mexicana">🌮  Mexicana</option>
      </select></p>
  </div>
  <div class="row">
    <div class="col-3" id="barra">
      <h4 class="p-3 active text-white rounded shadow">Productos</h4>
      <div style="
            overflow:scroll;
            height:560px;
            width:100%;" id="onView">
        {{#each Product}}
        <div class="card mt-3">
          <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text"><a href="/products/{{_id}}">Show details</a><a href="/products/{{_id}}/edit">Edit
                movie</a><br>{{description}}</p>
            <p class="card-text"><small class="text-muted">{{updated_at}}</small></p>

            <form action="/products/{{_id}}/delete" method="post">
              <button>Delete movie</button>
            </form>
          </div>
          <img class="card-img-bottom" src="{{this.imgPath}}" alt="Card image cap">
        </div>
        {{/each}}
      </div>

    </div>

  </div>
