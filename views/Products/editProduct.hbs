


<div class="row mt-3">

<div class="card col-6 shadow rounded" style="height: 575px">

<form action="/products/{{_id}}/edit" method="POST" enctype="multipart/form-data">
<h3 class="mt-3 ">Editar producto {{name}}</h3>
<div class="form-group">
  <label for="name">Name of Product: </label>
  <input class="col-9" type="text" name="name" id="name" value="{{name}}"></div>
  <label for="description">Description: </label><br>
  <textarea class="col-12" type="text" name="description" id="description" rows="6"  >
    {{this.description}}
</textarea>
<br>
 
  <br>
  <label>Vegetariano</label>
  <input type="checkbox" name="veget" id="veget">
  <label>Vegano</label>
  <input type="checkbox" name="vegan" id="vegan">
  <br>

  <label>Type of food</label>
  <select class="form-control " name="typeFood" id="typeFood" >
   <option value="Americana">Americana</option> 
   <option value="China">China</option> 
   <option value="Española">Española</option>
   <option value="India">India</option> 
   <option value="Italiana">Italiana</option> 
   <option value="Japonesa">Japonesa</option> 
   <option value="Turca">Turca</option> 
   <option value="Mexicana">Mexicana</option> 
</select>
  {{!-- <input type="file" name="photo"> --}}
  <br>
  <div class="custom-file mt-2 mb-2">
    <input type="file" class="custom-file-input" id="inputGroupFile01" name="photo">
    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
  </div>
  <input type="hidden" name="Pos" id="Pos"  value="{{Pos}}">
  <input type="hidden" name="lat" id="lat"  value="{{lat}}">
  <input type="hidden" name="lng" id="lng"  value="{{lng}}">
  <input type="hidden" name="author" id="author" value="jamon">
  <div class="form-group mt-2">
  <label class="" for="kcal">Total Kcals</label>
  <input class="col-9" type="text" name="kcal" id="kcal" value="{{kcal}}" readonly></div>

  <div class="form-group mt-2">
  <label class="" for="listIngredientes">List of ingredients </label>
  <input class="col-8" type="text" name="listIngredientes" id="listIngredientes" value="{{ingredients}}" readonly></div>
  <button class="col-12 active text-white mt-2 rounded p-1" type="submit">Add Product</button>
