
<form action="/products/{{_id}}/edit" method="POST" enctype="multipart/form-data">

  <label for="name">name: </label>
  <input type="text" name="name" id="name" value="{{name}}">
  <label for="description">description: </label>
  <input type="text" name="description" id="description" value="{{this.description}}">

  <img class="card-img-bottom" src="{{this.imgPath}}" alt="Card image cap">
  <label>Poster</label>
  <input type="file" name="photo">
  <input type="text" name="Pos" id="Pos">
  <input type="text" name="lat" id="lat">
  <input type="text" name="lng" id="lng">
  <input type="hidden" name="author" id="author" value="jamon">
  <button type="submit">Add movie</button>
</form>

